<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_card_shape"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/quiz_category_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:weightSum="10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="start|center"
            android:text="@string/quiz_Result"
            android:textColor="@color/app_bg_light"
            android:textSize="24dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start|top"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"

        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <TextView
                android:id="@+id/quiz_categories"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.5"
                android:gravity="start|center"
                android:text="@string/quiz_categories"
                android:textColor="@color/app_bg_light"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.5"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/category_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="3.5"
                    android:background="@drawable/rounded_corners"
                    android:contentDescription="@string/app_name"
                    android:elevation="4dp"
                    android:padding="18dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/companion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="6.5">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="15"
                        android:layout_weight="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/question" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="6"
                                    android:gravity="start|center"
                                    android:text="Total Questions:"
                                    android:textColor="@color/bg_round_color"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/totalQuestions"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="end|center"
                                    android:textColor="@color/app_bg_light"
                                    android:textSize="22dp" />
                            </LinearLayout>

                            
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/question" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="6"
                                    android:gravity="start|center"
                                    android:text="Attempted: "
                                    android:textColor="@color/bg_round_color"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/attempted_question"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="end|center"
                                    android:textColor="@color/app_bg_light"
                                    android:textSize="22dp" />
                            </LinearLayout>
                            
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/question" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="6"
                                    android:gravity="start|center"
                                    android:text="Not Attempted:"
                                    android:textColor="@color/bg_round_color"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/did_not_attempted"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    
                                    android:layout_weight="4"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="end|center"
                                    android:textColor="@color/app_bg_light"
                                    android:textSize="22dp" />
                            </LinearLayout>
                            
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/time" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:layout_marginStart="5dp"
                                    android:gravity="start|center"
                                    android:text="Time Taken"
                                    android:textColor="@color/bg_round_color"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/remaining_time"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    
                                    android:layout_weight="4"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="end|center"
                                    android:textColor="@color/app_bg_light"
                                    android:textSize="22dp" />
                            </LinearLayout>
                            
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/question" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/timeTaken"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="6"
                                    android:gravity="start|center"
                                    android:text="Score :"
                                    android:textColor="@color/bg_round_color"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/correctQuestions"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:layout_marginEnd="20dp"
                                    android:gravity="end|center"
                                    android:textColor="@color/app_bg_light"
                                    android:textSize="22dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>